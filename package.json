{
  "name": "@mopex/react-gantt-flow",
  "version": "0.0.1-beta.1",
  "author": "moppiiiii",
  "description": "A lightweight and high-performance React (TypeScript) based Gantt chart component.",
  "packageManager": "pnpm@10.18.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moppiiiii/react-gantt-flow"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "gantt",
    "chart",
    "component"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-gantt-flow.js",
      "require": "./dist/react-gantt-flow.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "module": "./dist/react-gantt-flow.js",
  "main": "./dist/react-gantt-flow.cjs",
  "files": [
    "dist",
    "images",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "dev:css": "tcm src --watch",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --only-changed",
    "format:check": "biome format ./src",
    "format:fix": "biome format --write ./src",
    "lint:check": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "knip": "knip --config knip.json",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@chromatic-com/storybook": "^4.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.38.0",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/react-vite": "9.1.16",
    "@types/node": "^22.18.13",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.7.0",
    "chromatic": "^11.29.0",
    "eslint": "^9.38.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "9.1.16",
    "globals": "^15.15.0",
    "knip": "^5.66.4",
    "lefthook": "^1.13.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "9.1.16",
    "typed-css-modules": "^0.9.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "pnpm": {
    "overrides": {
      "vite@>=6.2.0 <6.2.3": ">=6.2.3",
      "vite@>=6.2.0 <6.2.4": ">=6.2.4",
      "vite@>=6.2.0 <6.2.6": ">=6.2.6",
      "vite@>=6.2.0 <=6.2.6": ">=6.2.7",
      "vite@>=6.2.0 <6.2.5": ">=6.2.5",
      "brace-expansion@>=1.0.0 <=1.1.11": "=1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": "=2.0.2",
      "@eslint/plugin-kit@<0.3.4": ">=0.3.4",
      "vite@>=6.0.0 <=6.3.5": ">=6.3.6"
    }
  }
}
